<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Text  -->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="header" parent="text">
        <item name="android:textSize">@dimen/_42sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title" parent="text">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <!--  Buttons  -->
    <style name="wide_button">
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
        <item name="android:paddingStart">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:radius">@dimen/_8sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
<!--        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.PromoFinder.Button.Circle</item>-->
    </style>
    <style name="wide_button_primary" parent="wide_button">
        <item name="materialThemeOverlay">@style/wide_button_primary.theme</item>
    </style>
    <style name="wide_button_secondary" parent="wide_button">
        <item name="materialThemeOverlay">@style/wide_button_secondary.theme</item>
    </style>
    <style name="wide_button_primary.theme">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>
    <style name="wide_button_secondary.theme">
        <item name="colorPrimary">@color/secondaryColor</item>
    </style>
    <style name="ShapeAppearanceOverlay.PromoFinder.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <!--  Tabs  -->
    <style name="tab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tab.text</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/secondaryColor</item>
        <item name="tabIndicatorHeight">@dimen/_4sdp</item>
    </style>
    <style name="tab.text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--  Containers  -->
    <style name="button_container" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:layout_marginBottom">@dimen/_24sdp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--  Input  -->
    <style name="bordered_input" parent="text">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:background">@drawable/input_border</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
    </style>
</resources>