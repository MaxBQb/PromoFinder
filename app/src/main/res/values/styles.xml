<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Text  -->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="header" parent="text">
        <item name="android:textSize">@dimen/_42sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title" parent="text">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <!--  Buttons  -->
    <style name="wide_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:radius">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTintMode">add</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.PromoFinder.Button.Circle</item>
    </style>
    <style name="wide_button_primary" parent="wide_button">
        <item name="materialThemeOverlay">@style/wide_button_primary.theme</item>
    </style>
    <style name="wide_button_secondary" parent="wide_button">
        <item name="materialThemeOverlay">@style/wide_button_secondary.theme</item>
    </style>
    <style name="wide_button_primary.theme">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>
    <style name="wide_button_secondary.theme">
        <item name="colorPrimary">@color/secondaryColor</item>
    </style>
    <style name="ShapeAppearanceOverlay.PromoFinder.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>
</resources>